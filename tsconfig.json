{
  "compilerOptions": {
    "paths": {
      "@/*": ["src/*"]
    },
    "rootDir": "./src",
    "incremental": true,
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    "allowJs": true,
    "baseUrl": "./",
    "strict": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
